    <script>
      // --- CONFIGURATION ---
      // Sequence: Up, Up, Down, Down, Left, Right, Left, Right, B, A, Enter
      const konamiCode = [
        "ArrowUp",
        "ArrowUp",
        "ArrowDown",
        "ArrowDown",
        "ArrowLeft",
        "ArrowRight",
        "ArrowLeft",
        "ArrowRight",
        "b",
        "a",
        "Enter",
      ];
      let cursor = 0;

      // --- DESKTOP: KEYBOARD LISTENER ---
      document.addEventListener("keydown", (e) => {
        // Allow 'b'/'B' and 'a'/'A' case insensitivity
        const key = e.key.toLowerCase();
        const target = konamiCode[cursor].toLowerCase();
        const code = e.code;

        // Match either the key value (e.g. "Enter", "b") or the Code (e.g. "ArrowUp")
        if (key === target || code === konamiCode[cursor]) {
          cursor++;
          if (cursor === konamiCode.length) {
            activateGodMode();
            cursor = 0;
          }
        } else {
          cursor = 0;
        }
      });

      // --- MOBILE: MARIO RHYTHM DETECTOR ---
      // Rhythm: 6 fast taps ... [pause] ... 1 final tap
      const statusPill = document.querySelector(".live-status");
      let tapTimes = [];

      if (statusPill) {
        statusPill.addEventListener("click", (e) => {
          e.preventDefault();
          const now = Date.now();

          // Reset if idle for 2 seconds
          if (
            tapTimes.length > 0 &&
            now - tapTimes[tapTimes.length - 1] > 2000
          ) {
            tapTimes = [];
          }

          tapTimes.push(now);

          if (tapTimes.length === 7) {
            const intervals = [];
            for (let i = 1; i < tapTimes.length; i++) {
              intervals.push(tapTimes[i] - tapTimes[i - 1]);
            }

            // Logic: The first 5 intervals (between the first 6 taps) should be fast/consistent.
            const fastPart = intervals.slice(0, 5);
            const avgFast =
              fastPart.reduce((a, b) => a + b, 0) / fastPart.length;

            // The 6th interval (the big gap before final tap) should be notably longer
            const bigGap = intervals[5];

            // Check 1: Are the first 6 notes a "cluster"? (fast taps)
            const isCluster = fastPart.every((i) => i < 600);

            // Check 2: Is the gap actually a gap? (At least 1.5x the fast beat)
            const isGap = bigGap > avgFast * 1.5;

            if (isCluster && isGap) {
              activateGodMode();
            }

            tapTimes = []; // Reset
          }
        });
      }

      // --- GOD MODE FUNCTION ---
      function activateGodMode() {
        // 1. Enable Editing
        document.body.contentEditable = "true";
        document.designMode = "on";

        // 2. Visuals (Rainbow Borders)
        const style = document.createElement("style");
        style.innerHTML = `
          * { transition: all 0.3s ease; }
          .card, .hero-badge, .live-status, .btn {
            animation: rainbow-border 2s linear infinite !important;
            border: 2px solid transparent !important;
          }
          @keyframes rainbow-border {
            0% { border-color: #ff0000; box-shadow: 0 0 15px #ff0000; }
            20% { border-color: #ffff00; box-shadow: 0 0 15px #ffff00; }
            40% { border-color: #00ff00; box-shadow: 0 0 15px #00ff00; }
            60% { border-color: #00ffff; box-shadow: 0 0 15px #00ffff; }
            80% { border-color: #0000ff; box-shadow: 0 0 15px #0000ff; }
            100% { border-color: #ff00ff; box-shadow: 0 0 15px #ff00ff; }
          }
        `;
        document.head.appendChild(style);

