---
import '../styles/global.css';

const name = "Ari Cartagena";
const username = "datuub";
const headline = "Computer Engineering Student at Florida Atlantic University | NSF LEARN Research Participant";

const projects = [
  {
    title: "ItemChanger.Silksong",
    description: "Active contributor to the C# game modding framework for Hollow Knight: Silksong. Building item randomization systems and gameplay modifications.",
    tags: ["C#", "Game Modding", "BepInEx", "Unity"],
    link: "https://github.com/hk-modding/ItemChanger.Silksong",
    icon: "üéÆ"
  },
  {
    title: "iOS Sideloading Tools",
    description: "Contributions to SideStore and LiveContainer ‚Äî enabling alternative app distribution and containerized iOS app execution.",
    tags: ["iOS", "Swift", "Open Source"],
    link: "#",
    icon: "üì±"
  },
  {
    title: "Hardware & Dual-Boot Systems",
    description: "Documented repairs for Framework laptops and iPhones. Maintained dual-boot setups with CachyOS and Windows for optimal development workflows.",
    tags: ["Hardware", "Linux", "Repair"],
    link: "#",
    icon: "üîß"
  }
];

const interests = [
  { icon: "üíª", label: "Low-Level Computing" },
  { icon: "üéÆ", label: "Game Modding" },
  { icon: "üîì", label: "Open Source" },
  { icon: "üéµ", label: "Music Production" }
];

const skills = [
  {
    category: "Languages & Frameworks",
    icon: "‚ö°",
    items: ["C# (Focus)", "Swift", "Astro", "Python"]
  },
  {
    category: "Hardware & Engineering",
    icon: "üîß",
    items: ["PCB Repair & Soldering", "Device Diagnostics (iPhone/Framework)", "Computer Assembly"]
  },
  {
    category: "Tools & Platforms",
    icon: "üõ†Ô∏è",
    items: ["Linux (Arch/CachyOS)", "Git/GitHub", "BandLab", "Discord API"]
  }
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ari Cartagena | Computer Engineering & Open Source</title>
    <meta name="description" content="Portfolio of Ari Cartagena, a Computer Engineering student at FAU and open-source contributor specializing in C#, iOS tools, and hardware repair." />
    <meta name="author" content="Ari Cartagena" />
    <meta property="og:title" content="Ari Cartagena | Computer Engineering & Open Source" />
    <meta property="og:description" content="Portfolio of Ari Cartagena, a Computer Engineering student at FAU and open-source contributor specializing in C#, iOS tools, and hardware repair." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://datuub.github.io" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="Ari Cartagena | Computer Engineering & Open Source" />
    <meta name="twitter:description" content="Portfolio of Ari Cartagena, a Computer Engineering student at FAU and open-source contributor specializing in C#, iOS tools, and hardware repair." />
    <link rel="canonical" href="https://datuub.github.io" />
  </head>
  <body>
    <header class="hero">
      <div class="hero-bg"></div>
      <div class="container hero-content">
        <div class="hero-badge animate-fade-in">
          <span class="badge-dot"></span>
          Available for Opportunities
        </div>
        <h1 class="hero-name animate-fade-in animate-delay-1">{name}</h1>
        <p class="hero-username animate-fade-in animate-delay-1">@{username}</p>
        <p class="hero-headline animate-fade-in animate-delay-2">{headline}</p>
        
        <div class="live-status animate-fade-in animate-delay-2">
          <span class="status-dot"></span>
          <span class="status-text">Currently Modding: Hollow Knight</span>
        </div>

        <div class="hero-interests animate-fade-in animate-delay-3">
          {interests.map((interest) => (
            <span class="interest-tag">
              <span class="interest-icon">{interest.icon}</span>
              {interest.label}
            </span>
          ))}
        </div>
        <div class="hero-cta animate-fade-in animate-delay-4">
          <a href="https://github.com/datuub" class="btn btn-primary" target="_blank" rel="noopener">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            Check my GitHub
          </a>
          <a href="mailto:contact@datuub.dev" class="btn btn-outline">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="4" width="20" height="16" rx="2"></rect>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
            </svg>
            Email Me
          </a>
        </div>
      </div>
    </header>

    <main>
      <section id="about" class="section about-section">
        <div class="container">
          <h2 class="section-title">About Me</h2>
          <div class="about-content">
            <div class="about-text">
              <p>
                I am a tech enthusiast with a deep interest in <strong>low-level computing</strong>, 
                <strong>game modding</strong>, and <strong>open-source software</strong>. I specialize 
                in C# and have experience repairing hardware ‚Äî from Framework laptops to iPhones.
              </p>
              <p>
                When I'm not coding, I'm analyzing lore in <em>Jujutsu Kaisen</em>, playing 
                <em>Rainbow Six Siege</em>, or working on music production in BandLab.
              </p>
            </div>
            <div class="about-stats">
              <div class="stat-card">
                <span class="stat-icon">üéì</span>
                <span class="stat-label">FAU</span>
                <span class="stat-value">Computer Engineering</span>
              </div>
              <div class="stat-card">
                <span class="stat-icon">üî¨</span>
                <span class="stat-label">Research</span>
                <span class="stat-value">NSF LEARN</span>
              </div>
              <div class="stat-card">
                <span class="stat-icon">‚ö°</span>
                <span class="stat-label">Primary</span>
                <span class="stat-value">C# / .NET</span>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section id="skills" class="section skills-section">
        <div class="container">
          <h2 class="section-title">Technical Arsenal</h2>
          <div class="skills-grid">
            {skills.map((skill) => (
              <div class="skill-card card">
                <div class="skill-header">
                  <span class="skill-icon">{skill.icon}</span>
                  <h3 class="skill-category">{skill.category}</h3>
                </div>
                <ul class="skill-list">
                  {skill.items.map((item) => (
                    <li class="skill-item">{item}</li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </div>
      </section>

      <section id="projects" class="section projects-section">
        <div class="container">
          <h2 class="section-title">Featured Projects</h2>
          <div class="projects-grid">
            {projects.map((project) => (
              <article class="project-card card">
                <div class="project-icon">{project.icon}</div>
                <h3 class="project-title">{project.title}</h3>
                <p class="project-description">{project.description}</p>
                <div class="project-tags">
                  {project.tags.map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
                {project.link !== "#" && (
                  <a href={project.link} class="project-link" target="_blank" rel="noopener">
                    View on GitHub ‚Üí
                  </a>
                )}
              </article>
            ))}
          </div>
        </div>
      </section>
    </main>

    <footer class="footer">
      <div class="container footer-content">
        <p class="footer-text">¬© 2026 Ari Cartagena. Built with Astro.</p>
        <div class="footer-links">
          <a href="https://github.com/datuub" target="_blank" rel="noopener">GitHub</a>
          <a href="mailto:contact@datuub.dev">Email</a>
        </div>
      </div>
    </footer>

    <style>
      .hero {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        padding: 40px 0;
      }

      .hero-bg {
        position: absolute;
        inset: 0;
        background: 
          radial-gradient(circle at 20% 80%, rgba(180, 190, 254, 0.08) 0%, transparent 40%),
          radial-gradient(circle at 80% 20%, rgba(203, 166, 247, 0.08) 0%, transparent 40%),
          radial-gradient(circle at 50% 50%, rgba(148, 226, 213, 0.05) 0%, transparent 50%);
        pointer-events: none;
      }

      .hero-content {
        position: relative;
        text-align: center;
        z-index: 1;
      }

      .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 16px;
        background: rgba(166, 227, 161, 0.1);
        border: 1px solid rgba(166, 227, 161, 0.2);
        border-radius: 20px;
        font-size: 0.85rem;
        color: #a6e3a1;
        margin-bottom: 32px;
      }

      .badge-dot {
        width: 8px;
        height: 8px;
        background: #a6e3a1;
        border-radius: 50%;
        animation: pulse 2s infinite;
      }

      @keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
      }

      .hero-name {
        font-size: clamp(3rem, 8vw, 5rem);
        font-weight: 700;
        letter-spacing: -0.02em;
        margin-bottom: 8px;
        background: linear-gradient(135deg, var(--ctp-text) 0%, var(--ctp-lavender) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .hero-username {
        font-size: 1.1rem;
        color: var(--ctp-overlay0);
        font-family: 'JetBrains Mono', monospace;
        margin-bottom: 16px;
      }

      .hero-headline {
        font-size: clamp(1rem, 2.5vw, 1.25rem);
        color: var(--color-text-secondary);
        max-width: 600px;
        margin: 0 auto 24px;
        line-height: 1.7;
      }

      .live-status {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 10px 20px;
        background: var(--ctp-surface0);
        border: 1px solid var(--color-border);
        border-radius: 24px;
        margin-bottom: 32px;
      }

      .status-dot {
        width: 10px;
        height: 10px;
        background: #a6e3a1;
        border-radius: 50%;
        animation: pulse 2s infinite;
        box-shadow: 0 0 8px rgba(166, 227, 161, 0.5);
      }

      .status-text {
        font-size: 0.9rem;
        color: var(--ctp-text);
        font-weight: 500;
      }

      .hero-interests {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 12px;
        margin-bottom: 40px;
      }

      .interest-tag {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 8px 16px;
        background: var(--color-bg-card);
        border: 1px solid var(--color-border);
        border-radius: 20px;
        font-size: 0.9rem;
        color: var(--color-text-secondary);
        transition: all var(--transition-fast);
        backdrop-filter: blur(8px);
      }

      .interest-tag:hover {
        border-color: var(--color-accent-primary);
        color: var(--color-text-primary);
      }

      .interest-icon {
        font-size: 1.1rem;
      }

      .hero-cta {
        display: flex;
        justify-content: center;
        gap: 16px;
        flex-wrap: wrap;
      }

      .about-section {
        background: var(--color-bg-secondary);
      }

      .about-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 48px;
        align-items: start;
      }

      .about-text {
        display: flex;
        flex-direction: column;
        gap: 16px;
      }

      .about-text p {
        color: var(--color-text-secondary);
        font-size: 1.1rem;
        line-height: 1.8;
      }

      .about-text strong {
        color: var(--color-text-primary);
      }

      .about-text em {
        color: var(--color-accent-tertiary);
        font-style: normal;
      }

      .about-stats {
        display: flex;
        flex-direction: column;
        gap: 16px;
      }

      .stat-card {
        display: grid;
        grid-template-columns: auto 1fr 1fr;
        gap: 16px;
        align-items: center;
        padding: 20px 24px;
        background: var(--color-bg-card);
        border: 1px solid var(--color-border);
        border-radius: var(--radius-md);
        transition: all var(--transition-fast);
        backdrop-filter: blur(8px);
      }

      .stat-card:hover {
        border-color: var(--color-border-hover);
      }

      .stat-icon {
        font-size: 1.5rem;
      }

      .stat-label {
        font-size: 0.85rem;
        color: var(--color-text-muted);
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      .stat-value {
        font-weight: 600;
        color: var(--color-text-primary);
        text-align: right;
      }

      .skills-section {
        background: var(--color-bg-primary);
      }

      .skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 24px;
      }

      .skill-card {
        display: flex;
        flex-direction: column;
        gap: 20px;
      }

      .skill-header {
        display: flex;
        align-items: center;
        gap: 12px;
      }

      .skill-icon {
        font-size: 1.75rem;
      }

      .skill-category {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--color-text-primary);
      }

      .skill-list {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 12px;
      }

      .skill-item {
        display: flex;
        align-items: center;
        gap: 10px;
        color: var(--color-text-secondary);
        font-size: 0.95rem;
        padding: 8px 12px;
        background: rgba(180, 190, 254, 0.05);
        border-radius: var(--radius-sm);
        border-left: 2px solid var(--color-accent-primary);
        transition: all var(--transition-fast);
      }

      .skill-item:hover {
        background: rgba(180, 190, 254, 0.1);
        color: var(--color-text-primary);
        transform: translateX(4px);
      }

      .projects-section {
        background: var(--color-bg-secondary);
      }

      .projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
        gap: 24px;
      }

      .project-card {
        display: flex;
        flex-direction: column;
        gap: 16px;
      }

      .project-icon {
        font-size: 2.5rem;
      }

      .project-title {
        font-size: 1.25rem;
        font-weight: 600;
      }

      .project-description {
        color: var(--color-text-secondary);
        flex-grow: 1;
      }

      .project-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
      }

      .project-link {
        color: var(--color-accent-primary);
        font-weight: 500;
        font-size: 0.9rem;
        transition: all var(--transition-fast);
      }

      .project-link:hover {
        color: var(--color-accent-secondary);
      }

      .footer {
        border-top: 1px solid var(--color-border);
        padding: 40px 0;
        background: var(--color-bg-primary);
      }

      .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 16px;
      }

      .footer-text {
        color: var(--color-text-muted);
        font-size: 0.9rem;
      }

      .footer-links {
        display: flex;
        gap: 24px;
      }

      .footer-links a {
        color: var(--color-text-secondary);
        font-size: 0.9rem;
      }

      @media (max-width: 768px) {
        .about-content {
          grid-template-columns: 1fr;
          gap: 32px;
        }

        .stat-card {
          grid-template-columns: auto 1fr;
          gap: 12px;
        }

        .stat-label {
          grid-column: 2;
        }

        .stat-value {
          grid-column: 2;
          text-align: left;
        }

        .skills-grid {
          grid-template-columns: 1fr;
        }

        .projects-grid {
          grid-template-columns: 1fr;
        }

        .footer-content {
          flex-direction: column;
          text-align: center;
        }

        .hero-cta {
          flex-direction: column;
          align-items: center;
        }
      }
    </style>
  </body>
</html>
